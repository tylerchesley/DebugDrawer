<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="2"
    >

    <TextView
        style="@style/DebugDrawerSubheader"
        android:text="@string/debug_header_build_information"
        app:layout_columnSpan="2"
        app:layout_gravity="start|end"
        />

    <TextView
        style="@style/DebugDrawerRowTitle"
        android:text="@string/debug_build_name"
        app:layout_gravity="start|end|center_vertical"
        />

    <TextView
        android:id="@+id/debug_build_name"
        style="@style/DebugDrawerRowValue"
        app:layout_gravity="start|end|center_vertical"
        />

    <TextView
        style="@style/DebugDrawerRowTitle"
        android:text="@string/debug_build_code"
        app:layout_gravity="start|end|center_vertical"
        />

    <TextView
        android:id="@+id/debug_build_code"
        style="@style/DebugDrawerRowValue"
        app:layout_gravity="start|end|center_vertical"
        />
    <TextView
        style="@style/DebugDrawerRowTitle"
        android:text="@string/debug_build_sha"
        app:layout_gravity="start|end|center_vertical"
        />

    <TextView
        android:id="@+id/debug_build_sha"
        style="@style/DebugDrawerRowValue"
        app:layout_gravity="start|end|center_vertical"
        />

    <TextView
        style="@style/DebugDrawerRowTitle"
        android:text="@string/debug_build_date"
        app:layout_gravity="start|end|center_vertical"
        />

    <TextView
        android:id="@+id/debug_build_date"
        style="@style/DebugDrawerRowValue"
        app:layout_gravity="start|end|center_vertical"
        />

</android.support.v7.widget.GridLayout>